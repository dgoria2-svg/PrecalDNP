<resources>

    <!-- Overlay de formas para 16dp -->
    <style name="ShapeAppearance.MedirDNP.Button" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Botón lleno (Material3) -->
    <style name="Widget.MedirDNP.Button" parent="Widget.Material3.Button">
        <!-- texto -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- color de fondo segun el tema -->
        <item name="backgroundTint">?attr/colorPrimary</item>

        <!-- forma -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MedirDNP.Button</item>

        <!-- padding/ícono e insets -->
        <item name="iconPadding">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Botón outlined -->
    <style name="Widget.MedirDNP.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>

        <!-- borde y radio -->
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MedirDNP.Button</item>

        <item name="iconPadding">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
